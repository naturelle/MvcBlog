@model IEnumerable<EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Index";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CatID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CatID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CatID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
