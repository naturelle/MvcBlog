@using EntityLayer.Concrete
@model List<Message2>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Inbox</h1>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Subject</th>
        <th>Sender</th>
        <th>Date</th>
        <th>Opern the message</th>
    
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageID</th>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
         
          
            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-danger">Open the message</a></td>
        </tr>
    }
</table>
<a href="/Blog/BlogAdd/" class="btn btn-primary">New Message</a>


